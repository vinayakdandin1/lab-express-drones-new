<h2>Update the drone</h2>

<form action="/drones/{{drone._id}}/edit" method="POST">

    <div class="mb-3">
        <label for="droneName" class="form-label">Drone Name</label>
        <input value="{{drone.name}}" name="myDroneName" type="text" class="form-control" id="droneName">
    </div>
    <div>
        <label for="dronePropellers" class="form-label">Number of Propellers</label>
        <input value="{{drone.propellers}}" name="dronePropellers" type="text" class="form-control" id="dronePropellers">
    </div>
     <div>
        <label for="droneSpeed" class="form-label">Drone Speed</label>
        <input value="{{drone.maxSpeed}}" name="droneSpeed" type="text" class="form-control" id="droneSpeed" >
     </div>

    <button type="submit" class="btn btn-primary">Edit</button>
</form>